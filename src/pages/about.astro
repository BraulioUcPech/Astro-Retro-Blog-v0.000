---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Sobre mi";
---

<BaseLayout pageTitle={pageTitle}>
  <!-- octocat -->
  <i class="nes-octocat animate"></i>
  <section class="nes-container is-dark">
    <section class="message-list">
      <section class="message -left">
        <div class="nes-balloon from-left is-dark">
          <p>¡Hola! Mi nombre es Braulio Uc Pech <i class="nes-jp-logo"></i></p>
        </div>
      </section>

      <section class="message -right">
        <div class="nes-balloon from-right is-dark">
          <p>Web developer y creador de ❤️Programación en español❤️</p>
        </div>
      </section>

      <section class="message -left">
        <div class="nes-balloon from-left is-dark">
          <p>Este blog está hecho con <a href="https://astro.build/">Astro</a> y <a href="https://nostalgic-css.github.io/NES.css/">NES.css</a></p>
        </div>
      </section>

      <section class="message -right">
        <div class="nes-balloon from-right is-dark">
          <p>
             😊 Si quieres seguirme, mira el pie de página 💕 <i
              class="nes-icon is-large heart"></i>
          </p>
        </div>
        <i class="nes-bcrikko"></i>
      </section>
    </section>
  </section>

  <!-- octocat -->
  <i class="nes-octocat animate"></i>
</BaseLayout>