    <a href="https://www.youtube.com/channel/UCphh7w8g_mmA7odvRfw-oQQ" target="_blank"><i class="nes-icon youtube is-medium"></i></a>
    <a href="https://www.linkedin.com/in/braulio-uc-pech-22027/" target="_blank"><i class="nes-icon linkedin is-medium"></i></a>
    <i class="nes-icon gmail is-medium" id="openModalBtn"></i>
  </div>
</footer>

<div class="modal" id="myModal">
  <div class="nes-container with-title is-dark">
    <p class="title">Correo Electrónico</p>
    <p class="nes-text is-primary">De: braulioalexsanderucpech@gmail.com</p>
    <p class="nes-text is-error">Asunto: Reunión importante</p>
    <p class="nes-text is-success">Siempre disponible.</p>
    <a href="mailto:braulioalexsanderucpech@gmail.com" class="nes-btn is-warning">Enviar correo</a>
    <button class="nes-btn is-error" id="closeModalBtn">Cerrar</button>
  </div>
</div>

<!-- Balloon -->
<div class="nes-balloon from-left" id="copiedBalloon" style="display: none;">
  <p>Correo copiado al portapapeles</p>
</div>

<script>
  

  document.addEventListener('DOMContentLoaded', function () {
    const openModalBtn = document.getElementById('openModalBtn')!;
    const closeModalBtn = document.getElementById('closeModalBtn')!;
    const modal = document.getElementById('myModal')!;

    openModalBtn.addEventListener('click', function () {
      modal.style.display = 'block';
    });

    closeModalBtn.addEventListener('click', function () {
      modal.style.display = 'none';
    });
  });
</script>
